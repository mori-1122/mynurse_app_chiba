<% if resource.errors.any? %> <%# 「resource にエラーが1つ以上ある場合」に処理を実行する %>
  <div class="flash-message flash-alert" id="error_explanation" data-turbo-cache="false"> <%#  data-turbo-cache="false" により Turbo にキャッシュされないようにする%>
    <h2>
      <%# I18n.t を使って config/locales/ja.yml などから翻訳されたメッセージを表示 %>
      <%= I18n.t("errors.messages.not_saved", 
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul> <%# エラー文を1つずつ取り出して <li> に入れる %>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


